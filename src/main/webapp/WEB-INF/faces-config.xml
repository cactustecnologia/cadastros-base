<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
	version="2.1">

	<application>
		<message-bundle>br.com.cactus.cadastros.Messages</message-bundle>
		<locale-config>
			<default-locale>pt_BR</default-locale>
		</locale-config>
	</application>

	<factory>
		<exception-handler-factory>
			br.com.cactus.cadastros.util.jsf.JsfExceptionHandlerFactory
		</exception-handler-factory>
	</factory>

	<converter>
		<converter-id>converter.CpfConverter</converter-id>
		<converter-class>br.com.cactus.cadastros.converter.CpfConverter</converter-class>
	</converter>
	
	<converter>
		<converter-id>converter.CnpjConverter</converter-id>
		<converter-class>br.com.cactus.cadastros.converter.CnpjConverter</converter-class>
	</converter>
</faces-config>